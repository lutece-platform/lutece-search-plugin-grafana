<?xml version="1.0" encoding="UTF-8"?><plug-in>
    <name>grafana</name>
    <class>fr.paris.lutece.plugins.grafana.service.GrafanaPlugin</class>
    <version>2.0.6-SNAPSHOT</version>
    <documentation/>
    <installation/>
    <changes/>
    <user-guide/>
    <description>grafana.plugin.description</description>
    <provider>grafana.plugin.provider</provider>
    <provider-url>http://dev.lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/grafana/grafana.png</icon-url>
    <copyright>Copyright (c) 2014 City of Paris</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>6.0.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>GRAFANA_MANAGEMENT</feature-id>
            <feature-title>grafana.adminFeature.GrafanaDashboard.name</feature-title>
            <feature-description>grafana.adminFeature.GrafanaDashboard.description</feature-description>
            <feature-level>0</feature-level>
            <feature-url>jsp/admin/plugins/grafana/GrafanaDashboard.jsp</feature-url>
            <feature-icon-url/>
        </admin-feature>
        <admin-feature>
            <feature-id>GRAFANA_RBAC_MANAGEMENT</feature-id>
            <feature-title>grafana.adminFeature.ManageGrafana.name</feature-title>
            <feature-description>grafana.adminFeature.ManageGrafana.description</feature-description>
            <feature-level>1</feature-level>
            <feature-url>jsp/admin/plugins/grafana/ManageDashboards.jsp</feature-url>
            <feature-icon-url/>
      </admin-feature>
    </admin-features>    

    <!-- Portlet parameters -->
    <portlets>
    </portlets>
    
    <!-- RBAC Resources -->
    <rbac-resource-types>
        <rbac-resource-type>
            <rbac-resource-type-class>
                fr.paris.lutece.plugins.grafana.service.DashboardIdService 
            </rbac-resource-type-class>
        </rbac-resource-type>
    </rbac-resource-types>
</plug-in>